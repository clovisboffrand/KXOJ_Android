<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grey_textures"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:background="@color/actionbar_tint_color"
        android:gravity="center"
        android:text="@string/Social"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <include layout="@layout/layout_ads" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="9">

        <ImageView
            android:id="@+id/btnFacebook"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_facebook" />

        <ImageView
            android:id="@+id/btnTwitter"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@drawable/btn_twitter" />

        <ImageView
            android:id="@+id/btnInstagram"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@drawable/btn_instagram" />

        <ImageView
            android:id="@+id/btnYoutube"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@drawable/btn_youtube" />

        <ImageView
            android:id="@+id/btnWebsite"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@drawable/btn_website" />

        <ImageView
            android:id="@+id/btnPhone"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@drawable/btn_phone" />

        <ImageView
            android:id="@+id/btnEmail"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@drawable/btn_email" />

        <ImageView
            android:id="@+id/btnMessage"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@drawable/btn_message" />

        <ImageView
            android:id="@+id/btnVine"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@drawable/btn_vine" />
    </LinearLayout>
</LinearLayout>